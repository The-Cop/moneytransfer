<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="trace" name="smamx" packages="" verbose="true" monitorInterval="30" >
    <Appenders>
        <Console name="console" target="SYSTEM_OUT" encoding="UTF-8">
            <PatternLayout charset="UTF-8" pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} [%t] %-5p %c %x - %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="console"/>
        </Root>
        <Logger name="ru.thecop" level="trace"/>
        <Logger name="org.hibernate.orm.deprecation" level="error"/>

    </Loggers>
</Configuration>
